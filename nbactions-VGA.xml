<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xmx45g -classpath %classpath cz.cvut.fel.aic.amodsim.MapVisualizer C:\Workspaces\AIC\amod-to-agentpolis\local_config_files\fido-AIC.cfg</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address} -Xmx45g -classpath %classpath cz.cvut.fel.aic.amodsim.MapVisualizer C:\Workspaces\AIC\amod-to-agentpolis\local_config_files\fido-AIC.cfg</exec.args>
                <exec.executable>java</exec.executable>
